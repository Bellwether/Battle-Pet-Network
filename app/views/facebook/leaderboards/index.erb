<% content_for :page_title do %><h2><%=AppConfig.name%> Leadboards</h2><% end %>
<div class="right">
  <div class="box half">
    <h3>Strongest Fighters</h3>
    <table class="leaderboard" id="strongest">
	  <tbody>
		<tr><th>Rank</th><th>Wins</th><th>Name</th><th>Level</th><th>Record</th></tr>
		<% if @strongest.blank? %>
		  <tr><td colspan="5" class="em empty">No ranked leaderboards</td></tr>
		<% else %>
		  <% @strongest.ranks.each do |r| %>
		    <tr class="ranking">
		      <td><%= r.rank %></td>
		      <td><%= r.rankable.challenges.wins.count %></td>
		      <td><%= r.rankable.name %></td>
		      <td><%= r.rankable.level_rank_count %></td>
		      <td><%= r.rankable.battle_record %></td>
		    </tr>
		  <% end %>
		<% end %>
	  </tbody>
	</table>
  </div>
</div>
<div class="left">
  <div class="box half">
    <h3>Indefatigable Fighters</h3>
    <table class="leaderboard" id="indefatigable">
	  <tbody>
		<tr><th>Rank</th><th>Battles</th><th>Name</th><th>Level</th><th>Record</th></tr>
		<% if @indefatigable.blank? %>
		  <tr><td colspan="5" class="em empty">No ranked leaderboards</td></tr>
		<% else %>
		  <% @indefatigable.ranks.each do |r| %>
		    <tr class="ranking">
		      <td><%= r.rank %></td>
		      <td><%= r.rankable.challenges.recent.count %></td>
		      <td><%= r.rankable.name %></td>
		      <td><%= r.rankable.level_rank_count %></td>
		      <td><%= r.rankable.battle_record %></td>
		    </tr>
		  <% end %>
		<% end %>
	  </tbody>
	</table>
  </div>

  <div class="box half">
    <h3>Overlords</h3>
  </div>
</div>