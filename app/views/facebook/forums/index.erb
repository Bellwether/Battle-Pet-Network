<% content_for :page_title do %><h2>Forums</h2><% end %>

<div class="box">
  <table class="forums">
  <tr>
    <th width="70%" colspan="3">Forum</th>
    <th width="5%">Topics</th>
    <th width="5%">Posts</th>
    <th class="la" width="30%" colspan="1">Last Post</th>
  </tr>
  <% @forums.each do |forum| %>	
    <tr class="forum">
    <td></td>	
    <td></td>
    <td><%= link_to forum.name, facebook_forum_path(forum), :class => "title" %></td>
    <td></td>
    <td></td>
    <td>
      <% if forum.last_post %>	
        in <strong>(<%= link_to forum.last_post.topic.title, facebook_forum_forum_topic_path(:forum_id => forum.id, :id => forum.last_post.topic_id, :anchor => dom_id(forum.last_post)) %>)</strong>
		<br />
        <%= time_ago_in_words(forum.last_post.created_at) %>
        by <strong><%= forum.last_post.user.username %></strong>
      <% end %>
    </td>
    </tr>
    <tr><td colspan="6"><p class="em"><%= forum.description %></p></td></tr>
  <% end %>
  </table>
</div>